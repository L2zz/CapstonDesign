<?xml version="1.0" encoding="utf-8"?>



<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/signup_toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:background="@color/colorJustPay"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"/></android.support.v7.widget.Toolbar>


        <!-- ID Label -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="이메일"
                android:textAlignment="center"
                android:textColor="#06194e"
                android:textSize="@dimen/sub_text_size" />

            <EditText
                android:id="@+id/input_email"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:paddingRight="30dp"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/sub_text_size" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_email_val"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|right"
            android:text="이메일을 입력해주세요"
            android:paddingRight="20dp"
            android:textColor="#000000"
            android:textSize="@dimen/sub_text_size" />

        <!-- Password Label -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_ps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="비밀번호"
                android:textAlignment="center"
                android:textColor="#06194e"
                android:textSize="@dimen/sub_text_size" />

            <EditText
                android:id="@+id/input_ps"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:inputType="textPassword"
                android:textSize="@dimen/sub_text_size" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_ps_val"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|right"
            android:paddingRight="20dp"
            android:text="8-16자 영문 대,소문자,숫자,특수문자를 사용하세요"
            android:textColor="#000000"
            android:textSize="@dimen/sub_text_size" />


        <!-- Password Checking Label -->
        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_ps_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="비밀번호 확인"
                android:textAlignment="center"
                android:textColor="#06194e"
                android:textSize="@dimen/sub_text_size" />

            <EditText
                android:id="@+id/input_ps_check"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="@dimen/sub_text_size" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_ps_check_val"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="입력한 비밀번호와 일치합니다"
            android:textColor="#000000"
            android:paddingRight="20dp"
            android:textSize="@dimen/sub_text_size" />

        <!--  Nickname Label -->
        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="닉네임"
                android:textAlignment="center"
                android:textColor="#06194e"
                android:textSize="@dimen/sub_text_size" />

            <EditText
                android:id="@+id/input_nickname"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:inputType="textShortMessage"
                android:textSize="@dimen/sub_text_size" />

        </LinearLayout>
        <!--Confirm/Cancel button-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="150dp">

            <Button
                android:id="@+id/btn_signup_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"
                android:layout_marginRight="30dp"/>
            <Button
                android:id="@+id/btn_signup_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확인"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

