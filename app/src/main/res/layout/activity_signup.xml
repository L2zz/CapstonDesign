<?xml version="1.0" encoding="utf-8"?>



<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/signup_toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:background="@color/colorJustPay"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="회원가입"
                android:textColor="#ffffff"
                android:textSize="@dimen/title_text_size" /></android.support.v7.widget.Toolbar>



        <!-- ID Label -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView

                android:id="@+id/text_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="이메일"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sub_text_size" />

            <EditText
                android:id="@+id/input_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/sub_text_size" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_email_val"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|right"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="이메일을 입력해주세요"
            android:textColor="#000000"
            android:textSize="@dimen/sub_text_size" />

        <!-- Password Label -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/text_ps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="비밀번호"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sub_text_size" />

            <EditText
                android:id="@+id/input_ps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:inputType="textPassword"
                android:textSize="@dimen/sub_text_size" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_ps_val"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|right"
            android:paddingRight="20dp"
            android:text="8-16자 영문 대,소문자,숫자,특수문자를 사용하세요"
            android:textColor="#000000"
            android:textSize="@dimen/sub_text_size" />


        <!-- Password Checking Label -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/text_ps_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="비밀번호 확인"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sub_text_size" />

            <EditText
                android:id="@+id/input_ps_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:inputType="textPassword"
                android:textSize="@dimen/sub_text_size" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_ps_check_val"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="입력한 비밀번호와 일치하지 않습니다"
            android:textColor="#ff0000"
            android:paddingRight="20dp"
            android:textSize="@dimen/sub_text_size" />

        <!--  Nickname Label -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/text_nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="닉네임"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sub_text_size" />

            <EditText
                android:id="@+id/input_nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:inputType="textShortMessage"
                android:textSize="@dimen/sub_text_size" />

        </LinearLayout>

        <!--  Phone Label -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/text_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="핸드폰 번호"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sub_text_size" />

            <EditText
                android:id="@+id/input_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:inputType="phone"
                android:textSize="@dimen/sub_text_size" />

        </LinearLayout>

        <!--Confirm/Cancel button-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="150dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_signup_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="취소" />

            <Button
                android:id="@+id/btn_signup_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="확인" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

