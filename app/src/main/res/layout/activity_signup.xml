<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="56dp"
        android:paddingRight="24dp"
        android:paddingBottom="240dp">
        <!-- ID Label -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textColor="#06194e"
                android:text="이메일"
                android:textAlignment="center"
                android:textSize="16dip" />

            <EditText
                android:id="@+id/input_email"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:inputType="textEmailAddress" />

        </LinearLayout>
        <TextView
            android:id="@+id/text_email_val"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="이메일을 입력해주세요"/>

        <!-- Password Label -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_ps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="비밀번호"
                android:textColor="#06194e"
                android:textSize="16dip"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/input_ps"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:inputType="textPassword" />

        </LinearLayout>
        <TextView
            android:id="@+id/text_ps_val"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:textColor="#000000"
            android:text="8-16자 영문 대,소문자,숫자,특수문자를 사용하세요"
            />
        <!-- Password Checking Label -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_ps_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="비밀번호 확인"
                android:textColor="#06194e"
                android:textSize="16dip"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/input_ps_check"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />

        </LinearLayout>
        <TextView
            android:id="@+id/text_ps_check_val"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:textColor="#000000"
            android:text="입력한 비밀번호와 일치합니다"/>

        <!--  Nickname Label -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textColor="#06194e"
                android:text="닉네임"
                android:textSize="16dip"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/input_nickname"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:inputType="textShortMessage" />

        </LinearLayout>
        <!--Confirm/Cancel button-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="150dp">

            <Button
                android:id="@+id/btn_signup_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"
                android:layout_marginRight="30dp"/>
            <Button
                android:id="@+id/btn_signup_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확인"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

