<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/delete_chart_item_btn"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/delete_btn" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/item_category1_text1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="2.5"
        android:gravity="center_vertical"
        android:text="@string/item_chart_category1"
        android:textSize="@dimen/sub_text_size" />

    <TextView
        android:id="@+id/item_category1_text2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:text="@string/item_chart_category2"
        android:textSize="@dimen/sub_text_size" />

    <TextView
        android:id="@+id/item_category1_text3"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:text="@string/item_chart_category3"
        android:textSize="@dimen/sub_text_size" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="2" />

</LinearLayout>
